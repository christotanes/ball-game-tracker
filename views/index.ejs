<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>NBA Tracker</title>
    <link rel="stylesheet" href="./styles.css">
</head>

<body>

    <!-- Top Navigation Menu -->
    <div class="topnav">
        <!-- <a href="/" class="active">Logo</a> -->
        <!-- Navigation links (hidden by default) -->
        <div id="myLinks">
            <% for(let match of games){ %>
                <a href="https://www.nba.com/game/<%= match.cardData.awayTeam.teamTricode.toLowerCase() %>-vs-<%= match.cardData.homeTeam.teamTricode.toLowerCase() %>-<%= match.cardData.gameId %>" target="_blank"><%= match.cardData.awayTeam.teamTricode%> vs <%= match.cardData.homeTeam.teamTricode%></a>
            <%}%>
        </div>
        <!-- "Hamburger menu" / "Bar icon" to toggle the navigation links -->
        <a href="javascript:void(0);" class="icon" onclick="myFunction()">
            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" width="24" height="24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                <path d="M21 12.5a1.5 1.5 0 0 1-1.5 1.5H4.5a1.5 1.5 0 0 1 0-3h15a1.5 1.5 0 0 1 1.5 1.5zM21 6.5a1.5 1.5 0 0 1-1.5 1.5H4.5a1.5 1.5 0 0 1 0-3h15a1.5 1.5 0 0 1 1.5 1.5zM21 18.5a1.5 1.5 0 0 1-1.5 1.5H4.5a1.5 1.5 0 0 1 0-3h15a1.5 1.5 0 0 1 1.5 1.5z"/>
            </svg>          
        </a>
    </div>

    <section>
    <div id="headlines">
        <% for(let headline of headlines){ %>
            <div class="headlineTitle">  
                <a href="<%= headline.permalink %>" target="blank" class="headlineLink"><%= headline.title %></a>
            </div>
        <% }%>
        <span class="timer"></span>
    </div>
    </section>
    
    <section id="matches">
        <% for(let match of games){ %>
        <div class="matchup" id="<%= match.cardData.gameId %>" style="background-image: url('https://cdn.nba.com/davinci/images/team-matchups/nba/latest/ced/<%= match.cardData.awayTeam.teamTricode.toLowerCase() %>-<%= match.cardData.homeTeam.teamTricode.toLowerCase() %>/320x180.png')">  
        
            <!-- homeTeam is visually on the RIGHT -->
            <div class="homeTeam matchDetails">
                <% if(match.cardData.awayTeam.score < match.cardData.homeTeam.score) { %>
                    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" width="24" height="24" fill="currentColor" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                        <polygon points="9 5 19 12 9 19 9 5" fill="currentColor"/></svg>
                <%}%>
                    <%= match.cardData.homeTeam.score %>       
            </div>
            <div class="homeSub subtitle"> <%= match.cardData.homeTeam.teamSubtitle %> </div>
            <div class="status matchDetails">
                <%= match.cardData.gameStatusText %>
            </div>
            
            <!-- awayTeam is visually on the LEFT -->
            <div class="awayTeam matchDetails">
                    
                    <%= match.cardData.awayTeam.score %>
                    <% if(match.cardData.awayTeam.score > match.cardData.homeTeam.score) { %>
                    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" width="24" height="24" fill="currentColor" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                        <polygon points="15 19 5 12 15 5 15 19" fill="currentColor"/></svg>
                    <%}%>
            </div>  
            <div class="awaySub subtitle"> <%= match.cardData.awayTeam.teamSubtitle %></div>
        </div>
        <% } %>
    </section> 
    

    <div class="footer"><a href="https://christotanes.github.io/web-portfolio/">Chris Totanes 2023</a> | For demonstration purposes only</div>

    <script src="./script.js"></script>
</body>
</html>